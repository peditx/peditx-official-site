---
// src/layouts/Layout.astro
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <title>{title}</title>
    <meta name="description" content="Official website of PeDitX (PeDram Alemahmoud پدرام آل محمود)...">
    <meta name="keywords" content="PeDitX, Pedram, Iranian YouTuber, Iranian streamer...">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Roboto:wght@300;400&family=Vazirmatn:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="manifest" id="manifest-link">

    <style>
        /* تمام استایل‌های شما اینجا کپی شده */
        body { font-family: 'Vazirmatn', 'Roboto', sans-serif; background-color: #121212; /* ... بقیه استایل‌ها */ }
        h1, h2, h3, .nav-btn, .font-heading { font-family: 'Orbitron', 'Vazirmatn', sans-serif; /* ... بقیه استایل‌ها */ }
        /* ... تمام استایل‌های دیگر شما تا انتهای تگ style */
    </style>
</head>
<body class="antialiased">
    <slot />
</body>
</html>
