<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Content Manager</title>

    <!-- Favicons (اختیاری) -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

    <!-- می‌تونید CSS دلخواه اضافه کنید -->
    <style>
      body { margin: 0; font-family: sans-serif; }
      #cms-root { min-height: 100vh; }
    </style>
  </head>

  <body>
    <!-- روت CMS -->
    <div id="cms-root"></div>

    <!-- بارگذاری Decap CMS از CDN فقط در مرورگر -->
    <script type="module" client:load>
      import CMS from "https://unpkg.com/decap-cms@3.8.3/dist/decap-cms.js";

      try {
        CMS.init({
          configUrl: "/admin/config.yml" // حتما config.yml باید اینجا باشه
        });
        console.log("CMS initialized successfully");
      } catch (err) {
        console.error("CMS.init error:", err);
      }
    </script>
  </body>
</html>
